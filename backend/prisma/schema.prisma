generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  password     String
  scehdulePost ScehdulePost[]
  analytics    Analytics[]
}

model ScehdulePost {
  id               String   @id @default(uuid())
  platforms        String[]
  content          String
  ScheduleDateTime DateTime
  userId           String
  user             User     @relation(fields: [userId], references: [id])
}

model Analytics {
  id          String @id @default(uuid())
  platform    String
  engagements Int
  reach       Int
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}
